---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home - The American Literacy Institute">
  <section class="hero">
    <div class="container">
      <h1>Welcome to The American Literacy Institute</h1>
      <p class="hero-subtitle">Empowering communities through literacy and education</p>
      <div class="hero-cta">
        <a href="/programs" class="btn btn-primary">Explore Our Programs</a>
        <a href="/contact" class="btn btn-secondary">Get Involved</a>
      </div>
    </div>
  </section>

  <section class="mission">
    <div class="container">
      <h2>Our Mission</h2>
      <p>
        The American Literacy Institute is dedicated to promoting literacy and educational excellence
        across the United States. We believe that reading and writing skills are fundamental to
        personal growth, community development, and national prosperity.
      </p>
    </div>
  </section>

  <section class="features">
    <div class="container">
      <h2>What We Do</h2>
      <div class="feature-grid">
        <div class="feature-card">
          <h3>ðŸ“š Literacy Programs</h3>
          <p>Comprehensive reading and writing programs for all age groups and skill levels.</p>
        </div>
        <div class="feature-card">
          <h3>ðŸ‘¥ Community Outreach</h3>
          <p>Engaging with local communities to identify and address literacy challenges.</p>
        </div>
        <div class="feature-card">
          <h3>ðŸŽ“ Teacher Training</h3>
          <p>Professional development for educators to enhance literacy instruction methods.</p>
        </div>
        <div class="feature-card">
          <h3>ðŸ“– Resources & Materials</h3>
          <p>Free educational materials and resources for students, teachers, and families.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: var(--white);
    padding: 6rem 0;
    text-align: center;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 2rem;
    border-radius: 5px;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: inline-block;
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  .btn-primary {
    background-color: var(--accent-color);
    color: var(--white);
  }

  .btn-secondary {
    background-color: var(--white);
    color: var(--primary-color);
  }

  .mission {
    padding: 4rem 0;
    background-color: var(--white);
  }

  .mission h2 {
    font-size: 2.5rem;
    text-align: center;
    color: var(--primary-color);
    margin-bottom: 2rem;
  }

  .mission p {
    font-size: 1.2rem;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .features {
    padding: 4rem 0;
  }

  .features h2 {
    font-size: 2.5rem;
    text-align: center;
    color: var(--primary-color);
    margin-bottom: 3rem;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    background-color: var(--white);
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
  }

  .feature-card h3 {
    color: var(--primary-color);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.2rem;
    }

    .mission h2,
    .features h2 {
      font-size: 2rem;
    }
  }
</style>
